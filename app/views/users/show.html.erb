<% if flash[:notice] %>
    <h2><%= flash[:notice] %></h2>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>CreatedAt:</strong>
  <%= @user.created_at %>
</p>

<table style="margin: 30px;" border="1">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Code</th>
      <th>Subjects</th>
      <th>Description</th>
      <th>Credits</th>
      <th>Independent Study</th>
      <th>Req</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.subjects %></td>
        <td><%= course.description %></td>
        <td><%= course.credits %></td>
        <td><%= course.independent_study %></td>
        <td><%= course.requirements %></td>
        <td><%= link_to 'Show', course_path(course.id) %></td>
        <td><%= link_to 'Unenroll', user_path(session[:user_id], c_id: course.id), data: {confirm: "Are you sure?"} %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
